<div class="modal fade" id="updateBrandModal-{{brand._id}}" tabindex="-1"
    aria-labelledby="updateBrandModalLabel-{{brand._id}}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateBrandModalLabel-{{brand._id}}">Update Brand</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/wristwonders/brands/{{brand._id}}?_method=PUT" method="POST">

                    <div class="form-group">
                        <label for="updateBrandName-{{brand._id}}">New Brand Name:</label>
                        <input type="hidden" id="brand_detail" name="brand_detail" value="detail">
                        <input type="text" class="form-control" id="updateBrandName-{{brand._id}}" name="brandName"
                            required>
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>