{{#if (isEmpty watch)}}

<div class="img-container my-auto">
    <img src="/images/empty.png" alt="Empty data" class="img">
</div>

{{else}}
<div>
    <div class="container mt-4">
        {{#if message}}
        {{#each message}}
        <div class="alert alert-success" role="alert">
            {{this}}
        </div>
        {{/each}}
        {{/if}}
        {{#if error}}
        <div class="alert alert-danger d-flex flex-column" role="alert">
            {{#each error}}

            {{this}}

            {{/each}}</div>
        {{/if}}

        {{!-- {{#if (isString message)}}
        <div class="alert alert-success" role="alert">
            {{message}}
        </div>
        {{/if}}

        {{#if (isString error)}}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
        {{/if}} --}}

        <div class="">
            <div class=" d-flex gap-4">
                <div class="img-watch-admin-container">
                    <img src="{{watch.image}}" alt="{{watch.watchName}}" class="img-watch-information">
                </div>
                <div>
                    <p class="">
                    <h4 class="mb-3">{{toUpperCase watch.brand.brandName}}</h4>
                    <h5 class="d-inline-block me-2 fw-bold">{{watch.watchName}}</h5>
                    {{#if watch.automatic}}<span class="badge badge-danger rounded-pill text-bg-danger">Automatic</span>
                    {{else}}
                    <span class="badge badge-secondary rounded-pill text-bg-info">Non-Automatic</span>{{/if}}
                    <h4 class="mt-2 fw-bold">${{watch.price}}</h4>
                    <p class="mt-4">
                        <strong>Description:</strong> {{watch.watchDescription}}
                    </p>
                    </p>
                </div>
            </div>
            {{!-- comment --}}

            <div class="rating-container mt-5">
                <h4 class="fw-bold">Member feedbacks</h4>
                {{#if member}}
                {{#if member.isAdmin}}
                {{else}}
                <div class="my-3 bg-custom p-4 rounded-1">
                    <form action="/wristwonders/watches/collection/{{watch._id}}" method="POST">
                        <div class="mb-3 d-flex justify-content-center flex-column align-items-center">
                            <h3>Rating
                            </h3>
                            {{> star_rating}}
                        </div>
                        <div class="mb-2">
                            <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-dark">Submit</button>
                        </div>
                    </form>
                </div>
                {{/if}}
                {{else}}
                <div class="my-3 rounded-1 d-flex flex-column align-items-center justify-content-center bg-custom p-4">
                    <p class="">You must have account to comment!</p>
                    <button class="btn btn-dark"><a class="text-decoration-none text-light"
                            href="/wristwonders/auth/login">Login</a></button>
                </div>
                {{/if}}
                {{#if watch.comments}}
                {{!-- Display all comments --}}
                <ul class="list-group mb-4">
                    {{#each watch.comments}}
                    <li class="list-group-item d-flex flex-column my-2">
                        <div class="d-flex align-items-center gap-2">
                            <div class="rating_disabled">
                                <input type="radio" id="star3-{{author.membername}}" disabled
                                    name="rating-{{author.membername}}" value="3" {{#if (eq rating 3)}}checked{{/if}} />
                                <label class="star" for="star3-{{author.membername}}" title="Excellent"
                                    aria-hidden="true"></label>
                                <input type="radio" id="star2-{{author.membername}}" disabled
                                    name="rating-{{author.membername}}" value="2" {{#if (eq rating 2)}}checked{{/if}} />
                                <label class="star" for="star2-{{author.membername}}" title="Average"
                                    aria-hidden="true"></label>
                                <input type="radio" id="star1-{{author.membername}}" disabled
                                    name="rating-{{author.membername}}" value="1" {{#if (eq rating 1)}}checked{{/if}} />
                                <label class="star" for="star1-{{author.membername}}" title="Poor"
                                    aria-hidden="true"></label>
                            </div>
                            <small class="text-secondary">{{formatDateTime createdAt}}</small>
                        </div>
                        <div>
                            <div class="d-flex flex-column">
                                <strong>{{author.name}}</strong>
                                <small class="fs-6">{{author.membername}}</span>
                            </div>
                            <p class="mt-2">{{content}}</p>
                        </div>

                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <div class="d-flex flex-column align-items-center justify-content-center">
                    <div class="img-container my-auto">
                        <img src="/images/empty.png" alt="Empty data" class="img">
                    </div>
                    <p>No comments yet. Be the first to comment!</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>
{{/if}}