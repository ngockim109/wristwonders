<div class="rounded-1 bg-new-secondary py-2 px-3 mt-3 d-flex align-items-center mb-3">
    <a class="text-decoration-none" href="/wristwonders/members/profile">Profile</a>
    <i class="bi bi-chevron-right mx-1"></i>
    <span>My feedbacks</span>
</div>
<h4 class="mt-3">Your Feedbacks</h4>
{{#if message}}
<div class="alert alert-success" role="alert">
    {{message}}
</div>
{{/if}}

{{#if error}}
<div class="alert alert-danger" role="alert">
    {{error}}
</div>
{{/if}}

{{#if comments.length}}
<div class="card-columns mt-3 mb-4">
    {{#each comments}}
    <div class="card mb-3 shadow-sm">
        <div class="card-body d-flex gap-3">
            <div class="img-watch-admin-container">
                <img src="{{this.watch.image}}" alt="{{this.watch.watchName}}" class="img-watch-admin">
            </div>
            <div class="d-flex flex-column">
                <span>{{toUpperCase this.watch.brand.brandName}}</span>
                <span class="fw-bold">{{this.watch.watchName}}</span>
                <div class="d-flex gap-2 align-items-center">
                    <div class="rating_disabled">
                        <input type="radio" id="star3-{{this.watch._id}}" disabled name="rating-{{this.watch._id}}"
                            value="3" {{#if (eq rating 3)}}checked{{/if}} />
                        <label class="star" for="star3-{{this.watch._id}}" title="Excellent" aria-hidden="true"></label>
                        <input type="radio" id="star2-{{this.watch._id}}" disabled name="rating-{{this.watch._id}}"
                            value="2" {{#if (eq rating 2)}}checked{{/if}} />
                        <label class="star" for="star2-{{this.watch._id}}" title="Average" aria-hidden="true"></label>
                        <input type="radio" id="star1-{{this.watch._id}}" disabled name="rating-{{this.watch._id}}"
                            value="1" {{#if (eq rating 1)}}checked{{/if}} />
                        <label class="star" for="star1-{{this.watch._id}}" title="Poor" aria-hidden="true"></label>

                    </div>
                    <span class="card-text"><small class="text-muted">{{formatDateTime
                            this.createdAt}}</small>
                    </span>
                </div>
                <div>

                </div>
                <p class="card-text mt-2">{{this.content}}</p>
                {{!-- <div class="d-flex justify-content-between">
                    <a href="/wristwonders/comments/{{this._id}}/edit" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/wristwonders/comments/{{this._id}}/delete" method="POST" class="m-0">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div> --}}

            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="d-flex flex-column align-items-center justify-content-center">
    <div class="img-container my-auto">
        <img src="/images/empty.png" alt="Empty data" class="img">
    </div>
    <p>You have not left any feedbacks yet.</p>
</div>
{{/if}}
</div>