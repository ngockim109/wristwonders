<div class="container mt-5">
    <h2 class="mt-3">Update Profile</h2>
    {{#if (isString message)}}
    <div class="alert alert-success" role="alert">
        {{message}}
    </div>
    {{/if}}
    {{#if (isString error)}}
    <div class="alert alert-danger" role="alert">
        {{error}}
    </div>
    {{/if}}
    <form action="/wristwonders/members/profile/update-profile" method="POST">
        <label for="name">Name:</label>
        <input class="form-control" type="text" id="name" name="name" value="{{member.name}}" required min="1">
        <p class="text-danger">{{error.name}}</p>
        <label for="YOB">Year of Birth:</label>
        <input class="form-control" type="number" id="YOB" name="YOB" value="{{member.YOB}}" required>
        <p class="text-danger">{{error.YOB}}</p>
        <div class="d-flex justify-content-center align-items-center">
            <button class="btn btn-dark" type="submit">Update</button>
        </div>
    </form>
</div>